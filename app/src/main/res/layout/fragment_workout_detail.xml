<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/workout_detail"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:padding="16dp"
        tools:context=".WorkoutDetailFragment" />

    <ImageView
        android:id="@+id/workout_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/workout_detail"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:adjustViewBounds="true"
        android:contentDescription="Exercise Information"
        android:scaleType="fitCenter"
        android:src="@drawable/military_press_exercise" />

</RelativeLayout>
